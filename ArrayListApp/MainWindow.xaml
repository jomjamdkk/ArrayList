<Window x:Class="ArrayListApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArrayListApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="AddButton" Content="Add" HorizontalAlignment="Left" Margin="150,313,0,0" VerticalAlignment="Top" Height="45" Width="113" Click="AddButton_Click"/>
        <Button x:Name="RemoveButton" Content="Remove" HorizontalAlignment="Center" Margin="0,313,0,0" VerticalAlignment="Top" Height="45" Width="112" Click="RemoveButton_Click"/>
        <Button x:Name="ShowAllButton" Content="Show All" HorizontalAlignment="Right" Margin="0,313,150,0" VerticalAlignment="Top" Height="45" Width="113" Click="ShowAllButton_Click"/>
        <TextBox x:Name="TextBox" HorizontalAlignment="Center" Margin="0,218,0,0" TextWrapping="Wrap" Text="Fill something" VerticalAlignment="Top" Width="500" Height="31" FontSize="20" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus"/>

    </Grid>
</Window>
